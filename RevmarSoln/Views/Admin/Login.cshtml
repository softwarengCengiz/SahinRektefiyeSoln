@model SahinRektefiyeSoln.Models.Users
@{
    Layout = null;
}
<link href="~/Styles/Login.css" rel="stylesheet" />
@*<link runat="server" rel="shortcut icon" href="~/logo.ico" type="image/x-icon" />*@
<link runat="server" rel="shortcut icon" href="~/Images/shortLogo.png" type="image/x-icon" />
<script src="~/Scripts/Login.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                            {
                                @Html.Hidden("back", Convert.ToString(Request.QueryString["back"]))
                                @*<h4>Giriş</h4>*@
                                <div style="margin: auto;width: 50%;padding: 10px;">
                                    <img src="~/Images/logo.png" />
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", name = "username", id = "username", tabindex = "1", placeholder = "Kullanıcı Adı", value = "", autocomplete = "off", required = "required" })
                                    @*<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">*@
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { name = "password", id = "password", tabindex = "2", placeholder = "Şifre", required = "required" })
                                    @*<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">*@
                                </div>
                                @*<div class="col-xs-6 form-group pull-left checkbox">
                                        <input id="checkbox1" type="checkbox" name="remember">
                                        <label for="checkbox1">Remember Me</label>
                                    </div>*@
                                <div class="col-xs-6 form-group pull-right">
                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Giriş">
                                </div>
                            }

                            <form id="register-form" action="#" method="post" role="form" style="display: none;">
                                <h2>REGISTER</h2>
                                <div class="form-group">
                                    <input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
