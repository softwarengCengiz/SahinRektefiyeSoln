@model List<SahinRektefiyeSoln.Models.ViewModels.IsEmri.TicketListModel>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Styles/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>
<link href="~/Scripts/DatetimePicker/jquery.datetimepicker.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>

<div class="w3-panel">
    <div class="w3-row-padding w3-card w3-padding-top ">
        <div class="w3-padding">
            @if (Model == null)
            {
                <div class="w3-panel w3-pale-blue w3-border">
                    <h3>Talep Bulunamadı</h3>
                </div>


            }
            else
            {
                if (Model.Count() == 0)
                {
                    <div class="w3-panel w3-pale-blue w3-border">
                        <h3>Talep Bulunamadı</h3>
                    </div>
                }
                else
                {

                    @*
                                                public int TalepNo { get; set; }
                        public string Musteri { get; set; }
                        public DateTime MusteriAramaTarihi { get; set; }
                        public string AtananKisi { get; set; }
                        public string OlustuanKisi { get; set; }
                    *@

                    <table class="w3-table-all w3-hoverable w3-margin-top w3-margin-bottom w3-small">
                        <thead>
                            <tr>
                                @if (ViewBag.CanEdit)
                                {
                                    <th>İşlemler</th>
                                    @*<th></th>*@
                                }
                                <th>Talep Numarası</th>
                                <th>Müşteri</th>
                                <th>Müşteri Arama Tarihi</th>
                                <th>Atanan Kişi</th>
                                <th>Oluşturan Kişi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var talep in Model)
                            {
                                <tr>
                                    @*@if (ViewBag.CanEdit)
                                        {
                                            <td class="w3-small"><a href="/Ticket/Edit?id=@talep.TalepNo" title="Görüntüle"><i class="fa fa-pencil-square-o w3-hover-opacity" aria-hidden="true"></i></a></td>
                                            <td class="w3-small"><a href="/Ticket/DetailEdit?id=@talep.TalepNo" title="Görüntüle"><i class="fa fa-comment w3-hover-opacity" aria-hidden="true"></i></a></td>

                                        }*@

                                    @if (ViewBag.CanEdit)
                                    {
                                        <td class="w3-small">
                                            <a href="/Ticket/Edit?id=@talep.TalepNo" title="Talep Görüntüle"><i class="fa fa-pencil-square-o w3-hover-opacity" aria-hidden="true" style="padding:5px;"></i></a>
                                            <a href="/Ticket/DetailEdit?id=@talep.TalepNo" title="Arıza Bildirim Formu"><i class="fa fa-comment w3-hover-opacity" aria-hidden="true" style="padding:5px;"></i></a>
                                            <a href="/Ticket/CreatePdf?id=@talep.TalepNo" title="Arıza Bildirim Formu İndir"><i class="fa fa-file-pdf-o w3-hover-opacity" aria-hidden="true" style="padding:5px;"></i></a>
                                        </td>
                                    }
                                    <td>@talep.TalepNo </td>
                                    <td>@talep.Musteri </td>
                                    @*<td>@talep.MusteriAramaTarihi.Value.Date </td>*@
                                    @if (talep.MusteriAramaTarihi.HasValue)
                                    {
                                        <td>@talep.MusteriAramaTarihi.Value.Date</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@talep.AtananKisi </td>
                                    <td>@talep.OlustuanKisi </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>@*<td class="w3-center w3-padding-4" colspan="100%"> @Html.Pager(Model.musteriler.PageSize, Model.musteriler.PageNumber, Model.musteriler.TotalItemCount)</td>*@</tr>
                        </tfoot>
                    </table>
                }
            }




        </div>
    </div>
</div>






<script src="~/Scripts/DatetimePicker/jquery.datetimepicker.full.min.js"></script>
<script src="~/Scripts/DatetimePicker/bootstrap-datetimepicker.tr.js"></script>
